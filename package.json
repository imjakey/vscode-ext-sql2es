{
  "name": "sql2es",
  "displayName": "%displayName%",
  "description": "%description%",
  "l10n": "./package.nls.json",
  "version": "0.0.2",
  "publisher": "imjakey",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imjakey/vscode-ext-sql2es"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "SQL",
    "MySQL",
    "Elasticsearch",
    "ES",
    "Es",
    "DSL",
    "converter",
    "mysql",
    "database",
    "数据库"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onCommand:sql2es.convert",
    "onCommand:sql2es.convertToCurl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sql2es.convert",
        "title": "%command.convert.title%"
      },
      {
        "command": "sql2es.convertToCurl",
        "title": "%command.convertToCurl.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sql2es.convert",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "sql2es.convertToCurl",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "properties": {
        "sql2es.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "%config.apiKey.description%"
        },
        "sql2es.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "markdownDescription": "%config.apiEndpoint.description%"
        },
        "sql2es.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "markdownDescription": "%config.model.description%"
        },
        "sql2es.esEndpoint": {
          "type": "string",
          "default": "http://localhost:9200",
          "markdownDescription": "%config.esEndpoint.description%"
        },
        "sql2es.esVersion": {
          "type": "string",
          "default": "7.x",
          "markdownDescription": "%config.esVersion.description%"
        },
        "sql2es.esUsername": {
          "type": "string",
          "default": "",
          "markdownDescription": "%config.esUsername.description%"
        },
        "sql2es.esPassword": {
          "type": "string",
          "default": "",
          "markdownDescription": "%config.esPassword.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "22.17.1",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}